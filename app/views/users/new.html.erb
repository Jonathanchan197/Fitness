<h1>Sign Up</h1>


<% if @user.errors.any? %>
<div class="form">
    <ol>
        <% @user.errors.full_messages.each do |msg| %>
        <%= msg %>
        <% end %>
    </ol>
</div>
<% end %>
<div class="form">
<%= form_for @user do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, :required => true %>

    <%= f.label :password %>
    <%= f.password_field :password, :required => true %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true %>
    
    <%= f.submit "Register" %>
<% end %>
</div>